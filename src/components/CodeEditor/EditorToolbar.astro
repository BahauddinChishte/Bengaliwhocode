---
const languages = [
  { value: 'html', label: 'HTML' },
  { value: 'javascript', label: 'JavaScript' },
  { value: 'python', label: 'Python' }
];
---

<div class="bg-[#2d2d2d] px-4 py-2 flex items-center justify-between">
  <div class="flex items-center space-x-4">
    <select
      id="language-selector"
      class="bg-[#3d3d3d] text-white px-3 py-1.5 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-[#04AA6D]"
    >
      {languages.map(lang => (
        <option value={lang.value}>{lang.label}</option>
      ))}
    </select>
    <button
      id="reset-code"
      class="text-gray-400 hover:text-white text-sm"
      title="Reset to default code"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
    </button>
  </div>
  <button
    id="run-code"
    class="bg-[#04AA6D] text-white px-4 py-1.5 rounded-md text-sm hover:bg-[#059862] transition-colors flex items-center space-x-2"
  >
    <span>Run</span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </button>
</div>