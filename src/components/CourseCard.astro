---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
  bgColor: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="block group">
  <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 border border-gray-100">
    <div class="flex items-center mb-4">
      <span class="text-3xl mr-3">{icon}</span>
      <h3 class="text-xl font-semibold text-gray-900">
        {title}
      </h3>
    </div>
    <p class="text-gray-600">{description}</p>
    <div class="mt-4 text-[#04AA6D] font-medium group-hover:translate-x-1 transition-transform duration-200">
      আরও জানুন →
    </div>
  </div>
</a>